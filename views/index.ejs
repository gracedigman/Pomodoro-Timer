<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Cute Pomodoro Timer</title>
  <link rel="stylesheet" href="/css/styles.css">
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css">
</head>
<body>
  <div class="container">
    <h1>Pomodoro Timer</h1>
    
    <div class="timer-container">
      <div class="timer">
        <span id="minutes">25</span>:<span id="seconds">00</span>
      </div>
      
      <div class="timer-icons">
        <div class="timer-tomato">
          <i class="fas fa-seedling"></i>
        </div>
      </div>
      
      <div class="controls">
        <button id="start-btn" class="btn">Start</button>
        <button id="pause-btn" class="btn" disabled>Pause</button>
        <button id="reset-btn" class="btn">Reset</button>
      </div>
      
      <div class="session-type">
        <button id="pomodoro-btn" class="session-btn active">Pomodoro</button>
        <button id="short-break-btn" class="session-btn">Short Break</button>
        <button id="long-break-btn" class="session-btn">Long Break</button>
      </div>
    </div>
    
    <div id="quote-container" class="quote-container hidden">
      <div class="quote-bubble">
        <p id="quote-text"></p>
        <p id="quote-author"></p>
        <button id="close-quote" class="btn">Close</button>
      </div>
    </div>
    
    <div class="sessions-tracker">
      <h3>Sessions Completed: <span id="sessions-count">0</span></h3>
    </div>
    
    <!-- Settings Panel -->
    <div class="settings-panel">
      <button id="settings-toggle" class="btn settings-btn">
        <i class="fas fa-cog"></i> Settings
      </button>
      
      <div id="settings-container" class="hidden">
        <h3>Customize Timer Duration</h3>
        
        <div class="time-setting">
          <label for="pomodoro-time">Pomodoro (minutes):</label>
          <input type="number" id="pomodoro-time" min="1" max="120" value="25">
        </div>
        
        <div class="time-setting">
          <label for="short-break-time">Short Break (minutes):</label>
          <input type="number" id="short-break-time" min="1" max="60" value="5">
        </div>
        
        <div class="time-setting">
          <label for="long-break-time">Long Break (minutes):</label>
          <input type="number" id="long-break-time" min="1" max="60" value="15">
        </div>
        
        <button id="save-settings" class="btn">Save Settings</button>
      </div>
    </div>
  </div>
  
  <script src="/js/script.js"></script>
</body>
</html>